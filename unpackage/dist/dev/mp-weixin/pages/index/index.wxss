
/* 整体垂直：上（cards）/下（bottom） */
.page.data-v-1cf27b2a {
  display: grid;
  gap: 16px;
  padding: 10px;
}

/* 上方 cards 容器 */
.top.data-v-1cf27b2a {
  width: 100%;
  margin: 0 auto;
  border: 1px solid #ccc;
  padding: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50vh; /* 固定高度 */
}

/* cards 网格 */
.cards.data-v-1cf27b2a {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 1fr);
  gap: 8px;
  width: 100%;
  height: 100%;
}
.card-btn.data-v-1cf27b2a {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  border-radius: 6px;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-direction: column; /* 竖排排列 */
}
.card-btn.selected.data-v-1cf27b2a {
  border: 3px solid blue;
}

/* 下方左右两栏：左 labels | 右 btn-wrap */
.bottom.data-v-1cf27b2a {
  display: grid;
  grid-template-columns: 220px 1fr; /* 左列固定/右列自适应 */
  gap: 20px;
  width: 100%;
  max-width: 900px; /* 可按需调整 */
  margin: 0 auto;
  align-items: start;
  height: 50vh;
}

/* 竖排 labels（提高特异性覆盖旧样式） */
.bottom .labels.data-v-1cf27b2a {
  display: flex !important;
  flex-direction: column !important;
  gap: 10px;
  border: 1px solid #ccc;
  padding: 10px;
  height: 50vh;
}
.btn-wrap.data-v-1cf27b2a {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 四列均分 */
  gap: 15px;
}
.btn-wrap button.data-v-1cf27b2a {
  width: 100%; /* 填满格子 */
  height: 60px; /* 固定高度，可按需调整 */
  font-size: 1rem;
  border: none;
  border-radius: 6px;
  background: #eee;
  cursor: pointer;
  display: flex; /* 居中内容 */
  align-items: center;
  justify-content: center;
}

/* 小屏自适应：按钮改两列 */
@media (max-width: 560px) {
.bottom.data-v-1cf27b2a {
    grid-template-columns: 160px 1fr;
}
.btn-wrap.data-v-1cf27b2a {
    grid-template-columns: repeat(2, 1fr);
}
}
input.data-v-1cf27b2a {
  width: auto;
  padding: 8px 12px;
  font-size: 14px;
  border: 1px solid #ccc;
  border-radius: 6px;
  outline: none;
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}
input.data-v-1cf27b2a:focus {
  border-color: #409eff;
  box-shadow: 0 0 0 2px rgba(64, 158, 255, 0.2);
}
